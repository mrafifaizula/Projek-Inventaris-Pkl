@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Template/Auth.cshtml";

}

<div id="app">
    <section class="section">
        <div class="container mt-5">
            <div class="row">
                <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                    <div class="login-brand">
                        <img src="~/assets/img/stisla-fill.svg" alt="logo" width="100"
                            class="shadow-light rounded-circle">
                    </div>

                    <div class="card card-primary">
                        <div class="card-header">
                            <h4>@ViewData["Title"]</h4>
                        </div>
                        <div class="card-body">
                            <form id="account" method="post" class="needs-validation" novalidate="">
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                        aria-required="true" placeholder="name@example.com" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <div class="d-block">
                                        <label for="password" class="control-label">Password</label>
                                        <div class="float-right">
                                            <a id="forgot-password" asp-page="./ForgotPassword"
                                                class="text-small">Forgot Password?</a>
                                        </div>
                                    </div>
                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                                        aria-required="true" placeholder="password" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                @* <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" asp-for="Input.RememberMe" class="custom-control-input"
                                            id="remember-me">
                                        <label class="custom-control-label" asp-for="Input.RememberMe">Remember
                                            Me</label>
                                </div> *@

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
                                </div>
                            </form>

                            <div class="text-center mt-4 mb-3">
                                <div class="text-job text-muted">Login With Social</div>
                            </div>
                            <div class="row sm-gutters">
                                @if (Model.ExternalLogins != null && Model.ExternalLogins.Count > 0)
                                {
                                    foreach (var provider in Model.ExternalLogins)
                                    {
                                        <div class="col-6">
                                            <form id="external-account" asp-page="./ExternalLogin"
                                                asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                                <button type="submit" class="btn btn-block btn-social btn-primary"
                                                    name="provider" value="@provider.Name">
                                                    <span class="fab fa-@provider.Name.ToLower()"></span>
                                                    @provider.DisplayName
                                                </button>
                                            </form>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-12">
                                        <p>No external authentication services configured.</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="mt-5 text-muted text-center">
                        Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create
                            One</a>
                    </div>
                    <div class="simple-footer">
                        Copyright &copy; Stisla 2018
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


